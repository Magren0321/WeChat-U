
/*scroll-view外层*/
.tab{
  position: relative;
  white-space:nowrap;
  background-color: #5865EC;
  height: 5vh;
}
/*scroll-view本身*/
.scroll-tab-content{
  min-width:100%;
}
/*scroll-view内层*/
.scroll-tab--wrapper{
  margin-left: 25px;
  display: inline-block;
  color: #fff;
  font-size: 30rpx;
}
.active{
  border-bottom: solid white;
}
.scroll-tab-content .scroll-tab--wrapper:last-child{
  margin-right: 16px;  
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width:0;
  height:0;
  color:transparent;
}

