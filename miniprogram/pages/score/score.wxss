page {
  background-color: rgb(240, 245, 247);
}

.feedback{
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
}

.feedback image{
  display: block;
  height: 250rpx;
  width: 300rpx;
}

.user-data{
  margin: 2% 6%;
  display: flex;
  justify-content: space-between;
}

.item-view {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx; 
}

.score-info {
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 90%;
  height: 60%;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  background-color: rgb(140, 228, 235);
}

.time-view {
  display: flex;
  width: 100%;
  height: 40%;
}

.time-message {
  display: flex;
  justify-content: center;
  font-size: 33rpx;
  width: 100%;
}

.icon-view {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 10%;
}

.icon-view .icon {
  width: 80%;
  height: 75%;
}

.theText {
  font-size: 25rpx;
}

.secondView {
  display: flex;
  width: 100%;
  height: 25%;
  justify-content: space-evenly;
}

.thirdView{
  display: flex;
  width: 100%;
  height: 25%;
  justify-content: space-evenly;
}

.messageView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  line-height: 60rpx;
  border-radius: 5rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  background-color: white;
}

.messageShowView {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 15%;
  font-size: 24rpx;
}

.messageShowText{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  font-size: 24rpx;
}



