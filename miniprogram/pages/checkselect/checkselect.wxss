page {
  display: flex;
  width: 100%;
  height: 100%;
}

.allView {
  align-items: center;
  justify-content: center;
  width: 100%;
  flex-direction: column;
}

.beCenter {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  background: rgb(252, 252, 250);
}

.selectCourse {
  display: flex;
  align-items: center;
  width: 80%;
  height: 15%;
  flex-direction: row;
  border-radius: 10rpx;
  background: white;
  margin-top: 20rpx;
  border: 1rpx solid #aaa;
}

.iconView {
  display: flex;
  width: 10%;
  height: 100%;
}

.coursemessage2 {
  display: flex;
